<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://www.ehcache.org/ehcache.xsd"
         updateCheck="false">

    <!-- 定义默认缓存，maxElementsInMemory最多缓存10000个元素 -->
    <defaultCache maxElementsInMemory="10000"
                  eternal="false"
                  timeToIdleSeconds="120"
                  timeToLiveSeconds="1800"
                  overflowToDisk="true"
                  diskPersistent="false"
                  diskExpiryThreadIntervalSeconds="600"
                  memoryStoreEvictionPolicy="LRU"/>

    <!--    &lt;!&ndash; 自定义缓存（userCache），缓存名字叫“userCache” &ndash;&gt;-->
    <!--    <cache name="userCache"-->
    <!--           maxEntriesLocalHeap="500"            -->
    <!--    maxEntriesLocalDisk="10000"             &lt;!&ndash; 如果缓存超过了maxEntriesLocalHeap，剩下的会缓存在磁盘上，本条指定的最大数量为10000个 &ndash;&gt;-->
    <!--    eternal="false"                         &lt;!&ndash; 该缓存不是永久缓存 &ndash;&gt;-->
    <!--    diskSpoolBufferSizeMB="30"              &lt;!&ndash; 硬盘中写入数据时使用30 MB 的缓冲区 &ndash;&gt;-->
    <!--    timeToIdleSeconds="300"                 &lt;!&ndash; 元素在缓存中可以处于空闲状态的最长时间，超过该时间将被移除 &ndash;&gt;-->
    <!--    timeToLiveSeconds="600"                 &lt;!&ndash; 元素从缓存中消失的最长时间，超过该时间将被移除 &ndash;&gt;-->
    <!--    memoryStoreEvictionPolicy="LFU"         &lt;!&ndash; 缓存淘汰策略：LFU表示使用“最少访问次数算法”，即每次清理那些访问次数最少的节点。 &ndash;&gt;-->
    <!--    overflowToDisk="true"                   &lt;!&ndash; 开启磁盘溢出功能 &ndash;&gt;-->
    <!--    diskPersistent="false"                  &lt;!&ndash; 磁盘缓存文件没有持久化功能（默认）&ndash;&gt;-->
    <!--    diskExpiryThreadIntervalSeconds="600"/> &lt;!&ndash; 清理失效元素线程的运行频率 &ndash;&gt;-->

    <!-- 自定义缓存（userCache），缓存名字叫“userCache” -->
    <cache name="userCache"
           maxEntriesLocalHeap="500"
           maxEntriesLocalDisk="10000"
           eternal="false"
           diskSpoolBufferSizeMB="30"
           timeToIdleSeconds="300"
           timeToLiveSeconds="600"
           memoryStoreEvictionPolicy="LFU"
           overflowToDisk="true"
           diskPersistent="false"
           diskExpiryThreadIntervalSeconds="600"/>

</ehcache>
